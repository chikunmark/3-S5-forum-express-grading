{{!-- 看似有排版問題，但之後再說 --}}

<div class="row mt-5 border container">
  <div class="col-4">
    <img src="{{user.image}}" alt="your avatar" style="width: 100%;">
  </div>
  <div class="col-8">
    <h1 class="mt-3"><strong>{{user.name}}</strong></h1>
    <h3 class="my-3">{{user.email}}</h3>
    <h5>{{user.Comments.length}} 間已評論餐廳</h5>
    <h5>{{user.FavoritedRestaurants.length}} 間已收藏餐廳</h5>
    <h5>{{user.Followings.length}} followings (追蹤者)</h5>
    <h5>{{user.Followers.length}} follwers (追蹤者)</h5>
    <a class="btn btn-info mt-3" href="/users/{{user.id}}/edit">edit</a>
  </div>
</div>

<div class="row mt-3">
  <div class="col-4">
    {{!-- 顯示 followings --}}
    <div class="border mt-3">
      <div class="border p-2">
        <h3>{{user.Followings.length}} followings (追蹤者)</h3>
      </div>
      <div class="d-flex row">
        {{#each user.Followings}}
        <div class="col-1 my-2 mx-4">
          <a href="/users/{{this.id}}">
            {{!-- 圖片大小隨便設，未來想調再調 --}}
            <img src="{{this.image}}" alt="" style="width: 70px;">
          </a>
        </div>
        {{/each}}
      </div>
    </div>
    {{!-- 顯示 followings end --}}
    <br>

    {{!-- 顯示 followers --}}
    <div class="border mt-3">
      <div class="border p-2">
        <h3>{{user.Followers.length}} follwers (追蹤者)</h3>
      </div>
      <div class="d-flex row">
        {{#each user.Followers}}
        <div class="col-1 my-2 mx-4">
          <a href="/users/{{this.id}}">
            {{!-- 圖片大小隨便設，未來想調再調 --}}
            <img src="{{this.image}}" alt="" style="width: 70px;">
          </a>
        </div>
        {{/each}}
      </div>
    </div>
    {{!-- 顯示 followers end --}}
  </div>

  <div class="col-8">

    {{!-- 顯示已評論的餐廳 --}}
    <div class="border mt-3">
      <div class="border p-2">
        <h3>{{user.Comments.length}} 間已評論餐廳</h3>
      </div>
      <div class="d-flex row">
        {{#each user.Comments}}
        <div class="col-1 m-3">
          <a href="/restaurants/{{this.Restaurant.id}}">
            {{!-- 圖片大小隨便設，未來想調再調 --}}
            <img src="{{this.Restaurant.image}}" alt="" style="max-width: 90px;">
          </a>
        </div>
        {{/each}}
      </div>
    </div>
    {{!-- 顯示已評論的餐廳 end --}}

    {{!-- 顯示已收藏的餐廳 --}}
    <div class="border mt-3">
      <div class="border p-2">
        <h3>{{user.FavoritedRestaurants.length}} 間已收藏餐廳</h3>
      </div>
      <div class="d-flex row">
        {{#each user.FavoritedRestaurants}}
        <div class="col-1 m-3">
          <a href="/restaurants/{{this.id}}">
            {{!-- 圖片大小隨便設，未來想調再調 --}}
            <img src="{{this.image}}" alt="" style="max-width: 90px;">
          </a>
        </div>
        {{/each}}
      </div>
    </div>
    {{!-- 顯示已收藏餐廳 end --}}

  </div>
</div>